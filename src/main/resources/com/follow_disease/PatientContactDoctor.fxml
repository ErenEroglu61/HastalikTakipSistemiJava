<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<HBox spacing="20" style="-fx-background-color: #F5F7FA;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.follow_disease.controller.PatientContactDoctorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox alignment="TOP_CENTER" prefWidth="380.0" HBox.hgrow="ALWAYS" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10;">
        <Rectangle fill="#d32f2f" height="5.0" width="380.0" />
        <padding><Insets bottom="20.0" left="20.0" right="20.0" top="10.0" /></padding>
        <effect><DropShadow color="#0000001a" radius="10.0" spread="0.1" /></effect>

        <Label text="Doktorunuzun Bildirimleri" textFill="#333333">
            <font><Font name="Segoe UI Bold" size="18.0" /></font>
        </Label>

        <TextField fx:id="txtMedicineName" editable="false" prefHeight="45.0" promptText="Yeni İlaç Önerisi" style="-fx-background-color: #F0F2F5; -fx-border-color: #E0E0E0; -fx-background-radius: 8; -fx-border-radius: 8;" />
        <TextField fx:id="txtPrescriptionCode" editable="false" prefHeight="45.0" promptText="Reçete Kodu" style="-fx-background-color: #F0F2F5; -fx-border-color: #E0E0E0; -fx-background-radius: 8; -fx-border-radius: 8;" />

        <Separator />

        <Label text="Hastalık Seyri" textFill="#757575"><font><Font name="Segoe UI Semibold" size="14.0" /></font></Label>

        <TextField fx:id="txtCustomCourse" editable="false" prefHeight="60.0" promptText="Hastalığınızın İlerleyişi" style="-fx-background-color: #F0F2F5; -fx-border-color: #E0E0E0; -fx-background-radius: 8; -fx-border-radius: 8;" />
        <TextField fx:id="txtSideEffect" editable="false" prefHeight="80.0" promptText="Doktorun Geri Bildirimleri" style="-fx-background-color: #F0F2F5; -fx-border-color: #E0E0E0; -fx-background-radius: 8; -fx-border-radius: 8;" />

        <Region VBox.vgrow="ALWAYS" />
        <HBox spacing="10.0" alignment="CENTER_LEFT"> <children>
            <Button onAction="#handleClose" prefHeight="45.0" prefWidth="120.0"
                    style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="İPTAL ET" />
            <Button onAction="#handleSave" prefHeight="45.0" prefWidth="180.0"
                    style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="GÜNCELLE &amp; KAYDET" />
        </children>
        </HBox>
    </VBox>

    <VBox alignment="TOP_CENTER" prefWidth="380.0" HBox.hgrow="ALWAYS" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10;">
        <Rectangle fill="#d32f2f" height="5.0" width="380.0" />
        <padding><Insets bottom="20.0" left="20.0" right="20.0" top="10.0" /></padding>
        <effect><DropShadow color="#0000001a" radius="10.0" spread="0.1" /></effect>

        <Label text="Doktor Bilgileri" textFill="#333333">
            <font><Font name="Segoe UI Bold" size="18.0" /></font>
        </Label>

        <GridPane hgap="10" vgap="8">
            <Label text="Ad Soyad:" textFill="#757575" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <Label fx:id="lblDoctorName" text="-" textFill="#333333" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-font-weight: bold;" />

            <Label text="Unvan:" textFill="#757575" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <Label fx:id="lblDoctorTitle" text="-" textFill="#d32f2f" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-font-weight: bold;" />
            <columnConstraints><ColumnConstraints minWidth="80.0" /><ColumnConstraints hgrow="ALWAYS" /></columnConstraints>
        </GridPane>

        <Separator />

        <VBox spacing="5" alignment="CENTER">
            <Label text="Günlük Vital Bulgular" textFill="#757575" maxWidth="Infinity" alignment="CENTER">
                <font><Font name="Segoe UI Semibold" size="14.0" /></font>
            </Label>
            <Label text="Lütfen aşağıdaki bilgileri doldurun" textFill="#1976D2" style="-fx-font-size: 11;" />
        </VBox>

        <TableView fx:id="tblVitalSigns" editable="true" prefHeight="300.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colDate" prefWidth="80.0" text="Tarih" />
                <TableColumn fx:id="colSugar" prefWidth="80.0" text="Şeker" />
                <TableColumn fx:id="colBloodPressure" prefWidth="80.0" text="Tansiyon" />
                <TableColumn fx:id="colPulse" prefWidth="80.0" text="Nabız" />
                <TableColumn fx:id="colFever" prefWidth="80.0" text="Ateş" />
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        </TableView>
    </VBox>

    <VBox alignment="TOP_CENTER" prefWidth="380.0" HBox.hgrow="ALWAYS" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10;">
        <Rectangle fill="#d32f2f" height="5.0" width="380.0" />
        <padding><Insets bottom="20.0" left="20.0" right="20.0" top="10.0" /></padding>
        <effect><DropShadow color="#0000001a" radius="10.0" spread="0.1" /></effect>

        <Label text="Teşhis &amp; Semptomlar" textFill="#333333"><font><Font name="Segoe UI Bold" size="18.0" /></font></Label>

        <VBox spacing="5.0" style="-fx-background-color: #F0F2F5; -fx-padding: 12; -fx-background-radius: 10; -fx-border-color: #E0E0E0; -fx-border-radius: 10;">
            <Label fx:id="lblActiveDisease" text="Hastalık Adı" textFill="#1976D2" style="-fx-font-weight: bold;" />
            <Label fx:id="lblDiagnosisDate" text="Teşhis: -" textFill="#757575" />
        </VBox>

        <Label text="Hastalık Semptomları" textFill="#757575"><font><Font name="Segoe UI Semibold" size="14.0" /></font></Label>

        <VBox spacing="8" style="-fx-background-color: #F0F2F5; -fx-padding: 15; -fx-background-radius: 12; -fx-border-color: #BBDEFB; -fx-border-radius: 12;">
            <children>
                <Label text="Kendinizde gözlemlediğiniz semptomları seçin" textFill="#1565C0" style="-fx-font-size: 11; -fx-font-weight: bold;" />
                <ScrollPane fitToWidth="true" prefHeight="130.0" style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: transparent;">
                    <content><FlowPane fx:id="flowSymptoms" vgap="8" hgap="15" /></content>
                </ScrollPane>
            </children>
        </VBox>

        <Label text="Hasta Notu" textFill="#757575"><font><Font name="Segoe UI Semibold" size="14.0" /></font></Label>
        <TextArea fx:id="txtPatientNote" promptText="Hastalığınızın gidişatı hakkında eklemek istediklerinizi yazın..." prefHeight="100.0" style="-fx-control-inner-background: #F0F2F5; -fx-background-radius: 10; -fx-border-radius: 10;" wrapText="true" />
    </VBox>
</HBox>