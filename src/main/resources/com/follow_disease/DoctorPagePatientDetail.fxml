<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<HBox spacing="20" style="-fx-background-color: #F5F7FA;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.follow_disease.controller.DoctorPagePatientDetailController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox alignment="TOP_CENTER" minWidth="320.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10;">
        <Rectangle fill="#d32f2f" height="5.0" width="320.0" />
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
        </padding>
        <effect>
            <DropShadow color="#0000001a" radius="10.0" spread="0.1" />
        </effect>

        <Label text="Hasta Bilgileri" textFill="#333333">
            <font><Font name="Segoe UI Bold" size="18.0" /></font>
        </Label>

        <GridPane hgap="10" vgap="8">
            <Label text="Ad Soyad:" textFill="#757575" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <font><Font name="Segoe UI" size="13.0" /></font>
            </Label>
            <Label fx:id="lblFullName" text="-" textFill="#333333" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <font><Font name="Segoe UI Bold" size="13.0" /></font>
            </Label>
            <Label text="Kan grubu :" textFill="#757575" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <font><Font name="Segoe UI" size="13.0" /></font>
            </Label>
            <Label fx:id="lblBloodType" text="-" textFill="#d32f2f" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <font><Font name="Segoe UI Bold" size="13.0" /></font>
            </Label>
            <columnConstraints>
                <ColumnConstraints minWidth="80.0" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>

        <Separator />

        <Label text="Günlük Vital Bulgular" textFill="#757575">
            <font><Font name="Segoe UI Semibold" size="14.0" /></font>
        </Label>
        <TableView fx:id="tblVitalSigns" prefHeight="300.0" prefWidth="400.0">
            <columns>
                <TableColumn fx:id="colDate" prefWidth="80.0" text="Tarih" />
                <TableColumn fx:id="colSugar" prefWidth="80.0" text="Şeker" />
                <TableColumn fx:id="colBloodPressure" prefWidth="80.0" text="Tansiyon" />
                <TableColumn fx:id="colPulse" prefWidth="80.0" text="Nabız" />
                <TableColumn fx:id="colFever" prefWidth="80.0" text="Ateş" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <VBox alignment="TOP_CENTER" minWidth="380.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10;">
        <Rectangle fill="#d32f2f" height="5.0" width="380.0" />
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
        </padding>
        <effect>
            <DropShadow color="#0000001a" radius="10.0" spread="0.1" />
        </effect>

        <Label text="Teşhis &amp; Semptomlar" textFill="#333333">
            <font><Font name="Segoe UI Bold" size="18.0" /></font>
        </Label>

        <HBox spacing="10.0">
            <VBox HBox.hgrow="ALWAYS" spacing="5.0" style="-fx-background-color: #F0F2F5; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #E0E0E0; -fx-border-radius: 5;">
                <Label fx:id="lblActiveDisease" text="Hastalık Adı" textFill="#1976D2">
                    <font><Font name="Segoe UI Bold" size="14.0" /></font>
                </Label>
                <Label fx:id="lblAppointmentDate" text="Tarih: -" textFill="#757575" />
            </VBox>

            <VBox HBox.hgrow="ALWAYS" spacing="5.0" minWidth="170" prefHeight="80"
                  style="-fx-background-color: #F0F2F5; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #E0E0E0; -fx-border-radius: 5;">

                <HBox spacing="5">
                    <Label text="Aktif İlaç:" textFill="#333333" style="-fx-font-weight: bold; -fx-font-size: 12px;" />
                    <Label fx:id="lblCurrentMedicine" text="-" textFill="#1976D2" style="-fx-font-weight: bold; -fx-font-size: 12px;" />
                </HBox>

                <Label text="Diğer İlaçlar/Vitaminler:" textFill="#333333" style="-fx-font-size: 10px; -fx-font-weight: bold;" />

                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                            prefHeight="45.0" style="-fx-background: transparent; -fx-background-color: transparent;">
                    <content>
                        <Label fx:id="lblOtherMedicines" text="-" wrapText="true"
                               style="-fx-text-fill: #333333 !important; -fx-font-size: 11px; -fx-padding: 0 5 0 0;" />
                    </content>
                </ScrollPane>
            </VBox>
        </HBox>

        <Label text="Hastalık Semptomları" textFill="#757575">
            <font><Font name="Segoe UI Semibold" size="14.0" /></font>
        </Label>

        <ScrollPane fitToWidth="true" prefHeight="120.0" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: #E0E0E0; -fx-border-radius: 5;">
            <content>
                <FlowPane fx:id="flowSymptoms" orientation="VERTICAL" vgap="5" hgap="20" prefHeight="110.0" style="-fx-padding: 10;">
                </FlowPane>
            </content>
        </ScrollPane>

        <Label text="Hasta Notu" textFill="#757575">
            <font><Font name="Segoe UI Semibold" size="14.0" /></font>
        </Label>
        <TextArea fx:id="txtAdditionalComplaints" editable="false" prefHeight="80.0" style="-fx-control-inner-background: #F0F2F5; -fx-background-radius: 5;" wrapText="true" />
    </VBox>

    <VBox alignment="TOP_CENTER" minWidth="320.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10;">
        <Rectangle fill="#d32f2f" height="5.0" width="320.0" />
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
        </padding>
        <effect>
            <DropShadow color="#0000001a" radius="10.0" spread="0.1" />
        </effect>

        <Label text="Doktor Kararı" textFill="#333333">
            <font><Font name="Segoe UI Bold" size="18.0" /></font>
        </Label>

        <TextField fx:id="txtMedicineName" promptText="İlaç Adı" style="-fx-background-color: #F0F2F5; -fx-border-color: #E0E0E0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-pref-height: 35;" />
        <TextField fx:id="txtPrescriptionCode" promptText="Reçete Kodu" style="-fx-background-color: #F0F2F5; -fx-border-color: #E0E0E0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-pref-height: 35;" />

        <Separator />

        <Label text="Hastalık Seyri" textFill="#757575">
            <font><Font name="Segoe UI Semibold" size="14.0" /></font>
        </Label>
        <ComboBox fx:id="cbDiseaseCourse" maxWidth="Infinity" promptText="Hastalığın seyri " style="-fx-background-color: #F0F2F5; -fx-border-color: #E0E0E0;" />
        <TextField fx:id="txtCustomCourse" promptText="Doktorun Geri Bildirimleri" style="-fx-background-color: #F0F2F5; -fx-border-color: #E0E0E0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-pref-height: 35;" />
        <TextField fx:id="txtSideEffect" promptText="İlacın Olası Yan Etkileri &amp; Uyarılar" style="-fx-background-color: #F0F2F5; -fx-border-color: #E0E0E0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-pref-height: 35;" />

        <Region VBox.vgrow="ALWAYS" />

        <HBox spacing="10.0">
            <Button onAction="#handleClose" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 5;" text="İPTAL ET" />
            <Button onAction="#handleSave" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 5;" text="GÜNCELLE &amp; KAYDET" />
        </HBox>
    </VBox>
</HBox>