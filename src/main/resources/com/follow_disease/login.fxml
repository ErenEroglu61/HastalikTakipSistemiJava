<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #F5F7FA;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.follow_disease.controller.LoginController">
    <children>

        <VBox alignment="CENTER" maxWidth="400.0" maxHeight="450.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10;">

            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#d32f2f" height="5.0" width="400.0" />

            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="20.0" />
            </padding>

            <Label text="Hastalık Takip Sistemi" textFill="#333333">
                <font>
                    <Font name="Segoe UI Bold" size="22.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>

            <Label text="Giriş Yap" textFill="#757575">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>

            <TextField fx:id="emailField" promptText="E-Posta Adresi" style="-fx-background-color: #F0F2F5; -fx-border-color: #E0E0E0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-pref-height: 40;">
                <font>
                    <Font size="13.0" />
                </font>
            </TextField>

            <PasswordField fx:id="passwordField" promptText="Şifre" style="-fx-background-color: #F0F2F5; -fx-border-color: #E0E0E0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-pref-height: 40;">
                <font>
                    <Font size="13.0" />
                </font>
            </PasswordField>

            <Button fx:id="loginButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleLogin" style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 5;" text="GİRİŞ YAP">
                <padding>
                    <Insets bottom="10.0" top="10.0" />
                </padding>
                <font>
                    <Font size="14.0" />
                </font>
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Button>

            <Hyperlink fx:id="registerLink" onAction="#handleRegisterRedirect" text="Hesabınız yok mu? Kayıt Olun" textFill="#1976d2">
                <font>
                    <Font size="12.0" />
                </font>
            </Hyperlink>

            <effect>
                <DropShadow color="#0000001a" radius="10.0" spread="0.1" />
            </effect>
        </VBox>
    </children>
</StackPane>